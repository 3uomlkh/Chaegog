<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MypageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 수정"
            android:layout_gravity="center"
            android:textColor="@color/black" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/Iv_Edit_Mypage_Profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_baseline_account_circle_24" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Et_Edit_Mypage_UserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 닉네임"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <Button
            android:id="@+id/Btn_EditAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:text="수정"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심 분야" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <CheckBox
            android:id="@+id/Cb_Environment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button_mini"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="15sp"
            android:text="환경"/>
        <CheckBox
            android:id="@+id/Cb_Animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button_mini"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="15sp"
            android:text="동물권"/>
        <CheckBox
            android:id="@+id/Cb_Health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button_mini"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="15sp"
            android:text="건강"/>
        <CheckBox
            android:id="@+id/Cb_Religion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button_mini"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="15sp"
            android:text="종교"/>
        <CheckBox
            android:id="@+id/Cb_Etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/selector_radio_button_mini"
            android:textColor="@drawable/selector_radio_text"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/pretendardregular"
            android:textSize="15sp"
            android:text="기타"/>

        <TextView
            android:id="@+id/Tv_Edit_VeganReason"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="채식 타입" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TableRow>
        <RadioGroup
            android:id="@+id/Rg_veganType1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Radio_Vegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector_radio_button_mini"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="비건"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/Radio_Lacto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector_radio_button_mini"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="락토"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/Radio_Ovo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector_radio_button_mini"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="오보"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/Radio_LactoOvo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector_radio_button_mini"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="락토오보"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/Radio_Pollo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector_radio_button_mini"
                android:button="@null"
                android:gravity="center"
                android:text="폴로"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="15sp" />

        </RadioGroup>
        </TableRow>

        <TableRow>
        <RadioGroup
            android:id="@+id/Rg_veganType2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Radio_Pesco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector_radio_button_mini"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="페스코"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/Radio_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/selector_radio_button_mini"
                android:button="@null"
                android:fontFamily="@font/pretendardregular"
                android:gravity="center"
                android:text="지향없음"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="15sp" />
        </RadioGroup>
            <TextView
                android:id="@+id/Tv_Edit_VeganType"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"/>
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="알러지 종류" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:fontFamily="@font/pretendardregular"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/Cb_memil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="메밀" />

                    <CheckBox
                        android:id="@+id/Cb_mil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="밀" />

                    <CheckBox
                        android:id="@+id/Cb_daedu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대두" />

                    <CheckBox
                        android:id="@+id/Cb_hodu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="호두" />

                    <CheckBox
                        android:id="@+id/Cb_peanut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="땅콩" />

                    <CheckBox
                        android:id="@+id/Cb_peach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복숭아" />

                    <CheckBox
                        android:id="@+id/Cb_tomato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="토마토" />

                    <CheckBox
                        android:id="@+id/Cb_poultry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="난류(가금류)" />

                    <CheckBox
                        android:id="@+id/Cb_milk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="우유" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:fontFamily="@font/pretendardregular"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/Cb_shrimp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="새우" />

                    <CheckBox
                        android:id="@+id/Cb_mackerel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고등어" />

                    <CheckBox
                        android:id="@+id/Cb_mussel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="홍합" />

                    <CheckBox
                        android:id="@+id/Cb_abalone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전복" />

                    <CheckBox
                        android:id="@+id/Cb_oyster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="굴" />

                    <CheckBox
                        android:id="@+id/Cb_shellfish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조개류" />

                    <CheckBox
                        android:id="@+id/Cb_crab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="게" />

                    <CheckBox
                        android:id="@+id/Cb_squid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오징어" />

                    <CheckBox
                        android:id="@+id/Cb_sulfurous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아황산 포함식품" />

                    <TextView
                        android:id="@+id/Tv_Edit_Allergy"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="invisible" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>