<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/map_info_detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/camera"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
    <Button
        android:id="@+id/map_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="위치보기"/>
    <Button
        android:id="@+id/call_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="전화걸기"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/map_info_detail_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="식당명"
                android:textColor="#424242"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/map_info_save_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/favorite_off" />
        </LinearLayout>

        <TextView
            android:id="@+id/map_info_detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종류"
            android:textColor="#424242" />
        <!--            <TextView-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="별점"-->
        <!--                android:textColor="#424242"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴"
            android:textColor="#424242"
            android:textSize="17dp"
            android:textStyle="bold" />
        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="0dp"-->
        <!--            android:layout_weight="1"-->
        <!--            android:id="@+id/map_info_recyclerView"/>-->
        <TextView
            android:id="@+id/map_info_detail_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴"
            android:textColor="#424242" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textColor="#424242"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map_info_detail_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textColor="#424242" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업시간"
            android:textColor="#424242"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map_info_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업시간"
            android:textColor="#424242" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/map_info_detail_dayoff_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴무일"
            android:textColor="#424242"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/map_info_detail_dayoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴무일"
            android:textColor="#424242" />
    </LinearLayout>
</LinearLayout>