<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteReviewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="20dp"
        android:background="#fff8e1"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="리뷰"
            android:textColor="@color/black" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/restaurant_name_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="비건식당"
        android:fontFamily="@font/pretendardregular"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="별점"
        android:fontFamily="@font/pretendardregular"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black" />
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="별점"
        android:isIndicator="false"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:numStars="5"
        android:rating="5"
        android:stepSize="1.0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 등록"
        android:fontFamily="@font/pretendardregular"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black" />
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="10dp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_review1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:layout_margin="10dp"
            android:background="@drawable/review_border"
            android:src="@drawable/ic_baseline_add_circle_24"/>
        <ImageView
            android:id="@+id/image_review2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:layout_margin="10dp"
            android:background="@drawable/review_border"
            android:src="@drawable/ic_baseline_add_circle_24"/>
        <ImageView
            android:id="@+id/image_review3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:layout_margin="10dp"
            android:background="@drawable/review_border"
            android:src="@drawable/ic_baseline_add_circle_24"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰"
        android:fontFamily="@font/pretendardregular"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edit_review"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_margin="10dp"
        android:background="@drawable/review_border"
        android:backgroundTint="@color/gray_f5"
        android:fontFamily="@font/pretendardregular"
        android:gravity="top"
        android:hint="해당 식당에 대한 리뷰를 적어주세요."
        android:lines="10" />

    <Button
        android:id="@+id/Btn_uploadReview"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="2dp"
        android:text="등록" />


</LinearLayout>