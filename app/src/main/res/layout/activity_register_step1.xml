    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pretendardregular"
        android:lineSpacingExtra="2sp"
        android:text="@string/user_nickname"
        android:textColor="#424242"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Et_Register_Id"
        app:layout_constraintStart_toStartOf="@+id/Et_Register_Id" />

    <EditText
        android:id="@+id/Et_Register_Email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/selectboxred"
        android:fontFamily="@font/pretendardregular"
        android:hint="@string/user_email"
        android:autofillHints="emailAddress"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#1b1b1b"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_Register_Id" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pretendardregular"
        android:lineSpacingExtra="2sp"
        android:text="@string/user_email"
        android:textColor="#424242"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Et_Register_Email"
        app:layout_constraintStart_toStartOf="@+id/Et_Register_Email" />

    <EditText
        android:id="@+id/Et_Register_Pw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/selectboxred"
        android:fontFamily="@font/pretendardregular"
        android:hint="@string/user_password"
        android:autofillHints="password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#1b1b1b"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_Register_Email" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pretendardregular"
        android:lineSpacingExtra="2sp"
        android:text="@string/user_password"
        android:textColor="#424242"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Et_Register_Pw"
        app:layout_constraintStart_toStartOf="@+id/Et_Register_Pw" />

    <EditText
        android:id="@+id/Et_Register_PwCheck"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/selectboxred"
        android:fontFamily="@font/pretendardregular"
        android:hint="@string/confirm_password"
        android:autofillHints="password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#1b1b1b"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Et_Register_Pw" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pretendardregular"
        android:lineSpacingExtra="2sp"
        android:text="@string/confirm_password"
        android:textColor="#424242"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Et_Register_PwCheck"
        app:layout_constraintStart_toStartOf="@+id/Et_Register_PwCheck" />

    <Button
        android:id="@+id/Btn_Register1To2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardregular"
        android:text="@string/next_step"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>